doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    div(ng-app="toggl").container

      block content


    .container
      block footer
        .row
          .col-md-12
            a(href=`https://github.com/toggl/toggl_api_docs/blob/master/toggl_api.md`, target=`_new`, title=`Toggle API Documentation`) Toggl API

    block footerincludes
      script(src=`/node_modules/moment/min/moment.min.js`)
      //- script(src=`/node_modules/moment-timezone/buids/moment-timezone.min.js`)
      script(src=`/node_modules/angular/angular.min.js`)
      script(src=`/node_modules/angular-resource/angular-resource.min.js`)
      script.

            angular
                .module('config', [])
                .constant('API_KEY', '#{process.env.API_KEY}')
                .constant('API_PASS', '#{process.env.API_PASS}')
                .constant('API_URL', '#{process.env.API_URL}')

      script(src=`/javascripts/toggl.js`)

